<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SimpleHeader">
        <attr name="isLeftIconVisible" format="boolean"/>
        <attr name="isRightIconVisible" format="boolean"/>
        <attr name="leftIconDrawable" format="reference"/>
        <attr name="rightIconDrawable" format="reference"/>
        <attr name="iconColor" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ErrorFloater">
        <attr name="errorText" format="string"/>
        <attr name="isButtonVisible" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TextWithIcon">
        <attr name="text" format="string"/>
        <attr name="iconDrawable" format="reference"/>
        <attr name="textColor" format="reference|color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textIconColor" format="reference|color"/>
    </declare-styleable>

<declare-styleable name="Accordion">
    <attr name="accordionBackground" format="reference|color"/>
    <attr name="titleText" format="string"/>
    <attr name="accordionIconColor" format="integer"/>
    <attr name="divColor" format="integer"/>
</declare-styleable>
</resources>