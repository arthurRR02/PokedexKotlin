<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/medium_margin">

    <TextView
        android:id="@+id/moves_modal_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/caption_text"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Title"
        app:layout_constraintEnd_toStartOf="@id/moves_modal_ic_close"/>

    <ImageView
        android:id="@+id/moves_modal_ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        app:tint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/close_icon_description"/>

    <TextView
        android:id="@+id/moves_modal_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moves_modal_title"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/large_margin"
        android:layout_marginTop="@dimen/medium_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>